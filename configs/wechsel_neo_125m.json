{
    "model_name": "EleutherAI/gpt-neo-125M",
    "tokenizer_name": "./tokenizer/MBBPE",
    "datasets": {
        "names": [
        {
            "name": "datasets",
            "weight": 1.0
        }
        ],
        "params": {
            "train": {
                "start_weight": 0.0,
                "end_weight": 1.0
            },
            "valid": {
                "start_weight": 0.0,
                "end_weight": 1.0
            },
            "binarization_impl": "mmap",
            "append_eod": true,
            "log_interval": 10000
        }
    },
    "experiment": {
        "type": "WECHSEL",
        "name": "125M-training",
        "args": {
            "num_itl_layers": 1,
            "pos_emb_requires_grad": true,
            "phase1_steps": 5,
            "phase2_steps": 5
        },
        "checkpoint_params": {
            "save_dir": "./checkpoints",
            "save_interval": 5000
        },
        "eval_interval": 5000,
        "max_eval_steps": 5
    },
    "training": {
        "train_batch_size": 160,
        "train_micro_batch_size_per_gpu": 20,
        "gradient_accumulation_steps": 1,
        "optimizer": {
            "type": "Adam",
            "params": {
                "lr": 7e-5,
                "weight_decay": 5e-7,
                "betas": [
                    0.9,
                    0.95
                ]
            }
        },
        "scheduler": {
            "type": "WarmupDecayLR",
            "params": {
                "total_num_steps": 3000000,
                "warmup_min_lr": 0,
                "warmup_max_lr": 3e-5,
                "warmup_num_steps": 9000
            }
        },
        "fp16": {
            "enable": true
        },
        "zero_optimization": {
            "stage": 2,
            "allgather_partitions": true,
            "allgather_bucket_size": 2e8,
            "overlap_comm": true,
            "reduce_scatter": true,
        },
        "zero_allow_untested_optimizer": true,
        "wall_clock_breakdown": false,
        "steps_per_print": 9999999999
    }
}
